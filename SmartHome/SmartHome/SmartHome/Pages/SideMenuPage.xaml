<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SmartHome.Pages.SideMenuPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:SmartHome.Models;assembly=SmartHome"
             xmlns:pageModels="clr-namespace:SmartHome.PageModels;assembly=SmartHome"
             xmlns:pages="clr-namespace:SmartHome.Pages;assembly=SmartHome"
             x:Name="SideMenuPageView"
             Title="Menu"
             x:DataType="pageModels:SideMenuPageModel">
    <ContentPage.Content>
        <Grid Padding="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  UserData  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Ellipse Grid.Column="0"
                         Fill="Red"
                         HeightRequest="50"
                         HorizontalOptions="Start"
                         WidthRequest="50" />

                <Label Grid.Column="1"
                       Style="{StaticResource LabelPrimary}"
                       Text="{Binding AppState.UserData.Username}" />
            </Grid>

            <!--  Pages Navigation  -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Device Pages  -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>

                    <StackLayout Grid.Row="0"
                                 Orientation="Horizontal">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoToAllDevicesPageCommand}" />
                        </StackLayout.GestureRecognizers>

                        <Label Style="{StaticResource LabelPrimary}"
                               Text="All Devices" />
                    </StackLayout>

                    <StackLayout Grid.Row="1"
                                 Orientation="Horizontal">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoToSensorsPageCommand}" />
                        </StackLayout.GestureRecognizers>

                        <Label Style="{StaticResource LabelPrimary}"
                               Text="🌡️ Sensors" />
                    </StackLayout>

                    <StackLayout Grid.Row="2"
                                 Orientation="Horizontal">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoToLightSwitchesPageCommand}" />
                        </StackLayout.GestureRecognizers>

                        <Label Style="{StaticResource LabelPrimary}"
                               Text="💡 Lights" />
                    </StackLayout>

                    <StackLayout Grid.Row="3"
                                 Orientation="Horizontal">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoToAlarmSensorsPageCommand}" />
                        </StackLayout.GestureRecognizers>

                        <Label Style="{StaticResource LabelPrimary}"
                               Text="🚨 Alarm Sensors" />
                    </StackLayout>

                    <StackLayout Grid.Row="4"
                                 Orientation="Horizontal">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoToCamerasPageCommand}" />
                        </StackLayout.GestureRecognizers>

                        <Label Style="{StaticResource LabelPrimary}"
                               Text="📹 Cameras" />
                    </StackLayout>
                </Grid>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
