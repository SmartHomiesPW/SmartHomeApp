<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartHome.Pages.SideMenuPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:infrastructure="clr-namespace:SmartHome.Infrastructure;assembly=SmartHome"
    xmlns:models="clr-namespace:SmartHome.Models;assembly=SmartHome"
    xmlns:pageModels="clr-namespace:SmartHome.PageModels;assembly=SmartHome"
    xmlns:pages="clr-namespace:SmartHome.Pages;assembly=SmartHome"
    x:Name="SideMenuPageView"
    Title="Menu"
    x:DataType="pageModels:SideMenuPageModel">
    <ContentPage.Content>
        <Grid Padding="20,10,20,0" VerticalOptions="StartAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  UserData  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Ellipse
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    Style="{StaticResource UserInitialsCircle}"
                    VerticalOptions="Center" />

                <Label
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    Style="{StaticResource SidePanelLabelPrimary}"
                    Text="{Binding AppState.UserData.Initials}"
                    VerticalOptions="Center" />

                <Label
                    Grid.Column="1"
                    Padding="10,0,0,0"
                    Style="{StaticResource LabelPrimary}"
                    Text="{Binding AppState.UserData.Username}"
                    VerticalOptions="Center" />
            </Grid>

            <Grid
                Grid.Row="1"
                Padding="0,10,0,10"
                VerticalOptions="Center">
                <BoxView Style="{StaticResource Separator}" />
            </Grid>


            <StackLayout
                Grid.Row="2"
                BindableLayout.ItemsSource="{Binding PageFields}"
                Spacing="5">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="infrastructure:SideMenuFieldModel">
                        <Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Command, Mode=OneTime}" CommandParameter="{Binding Title}" />
                            </Grid.GestureRecognizers>
                            <Label
                                HeightRequest="35"
                                HorizontalOptions="StartAndExpand"
                                Style="{StaticResource SidePanelLabelPrimary}"
                                Text="{Binding DisplayText}"
                                VerticalOptions="Center">
                                <Label.Triggers>
                                    <DataTrigger
                                        Binding="{Binding IsMainPage, Mode=OneTime}"
                                        TargetType="Label"
                                        Value="False">
                                        <Setter Property="Style" Value="{StaticResource SidePanelLabelSecondary}" />
                                        <Setter Property="HeightRequest" Value="25" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </Grid>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
